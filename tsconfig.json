{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@ngx-security/core": [
        "dist/core"
      ],
      "@ngx-security/core/*": [
        "dist/core/*"
      ],
      "@ngx-security/permissions": [
        "dist/permissions"
      ],
      "@ngx-security/permissions/*": [
        "dist/permissions/*"
      ],
      "@ngx-security/roles": [
        "dist/roles"
      ],
      "@ngx-security/roles/*": [
        "dist/roles/*"
      ],
      "@ngx-security/auth": [
        "dist/auth"
      ],
      "@ngx-security/auth/*": [
        "dist/auth/*"
      ]
    }
  }
}
